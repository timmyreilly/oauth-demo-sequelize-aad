  body
    block header
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark #[a.navbar-brand(href='/') Faculty Request Experts]
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#nBar', aria-controls='nBar', aria-expanded='false', aria-label='Toggle navigation') #[span.navbar-toggler-icon]
      .collapse.navbar-collapse(id='nBar')
        ul.navbar-nav.mr-auto
          li.nav-item #[a.nav-link(href='/account') Account]
          li.nav-item #[a.nav-link(href='/logout') Logout]
          li.nav-item #[a.nav-link(href='/add') Create Faculty Request]
    block messages
      if locals.flashes
       - const categories = Object.keys(locals.flashes)
       each category in categories
        each message in flashes[category]
          p= message
          //- button(onClick="this.parentElement.remove()") &times;
    block content

    script.
      $(document).ready(function() {
          $('table.dTable').DataTable();
      } );
